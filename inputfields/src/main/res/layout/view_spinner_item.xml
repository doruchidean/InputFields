<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    >
    <TextView
        android:id="@+id/tv_spinner_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/half_horizontal_padding"
        android:layout_marginEnd="@dimen/half_horizontal_padding"
        android:paddingStart="@dimen/horizontal_padding"
        android:paddingTop="@dimen/half_horizontal_padding"
        android:paddingEnd="@dimen/horizontal_padding"
        android:paddingBottom="@dimen/half_horizontal_padding"
        />
</FrameLayout>